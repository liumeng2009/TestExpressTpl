extends ../../layout

block content
    .content-wrapper
        .row
            .col-lg-12.heading
                ul#crumb.breadcrumb
                    li
                        i.im-home
                        a(href="/admin") 首页
                        i.en-arrow-right7
                    li
                        i.im-home
                        a(href="/admin/user/list") 选择学校
                        i.en-arrow-right7
                    if sid
                        li
                            i.im-user4
                            a(href="/admin/user/list?sid=#{sid}") 用户列表
        if school
            .outlet
                .row
                    .col-lg-12
                        .panel.panel-default.plain.toggle.panelClose.panelRefresh
                            .panel-heading.white-bg
                                h4.panel-title #{school.name}的用户列表
                            .panel-body
                                .row.mb15
                                    .col-lg-8.col-md-8
                                    .col-lg-4.col-md-4
                                        a.btn.btn-default.pull-right(href="/admin/user?sid=#{school._id}")
                                            i.br-plus
                                            | 新增用户

                                table#presidentList.table.table-bordered
                                    thead
                                        tr
                                            th.per20 用户名称
                                            th.per10 角色
                                            th.per10 所属学校
                                            th.per20 联系电话
                                            th.per20 建立时间
                                            th.per20 操作
                                    tbody
                                        each user in users
                                            tr(class="item-id-#{user._id}")
                                                td #{user.name}
                                                td #{user.role.name}
                                                td #{user.school.name}
                                                td #{user.phone}
                                                td #{moment(user.meta.createAt).format('MM/DD/YYYY')}
                                                td
                                                    a.btn.btn-primary(href="/admin/user?id=#{user._id}&sid=#{school._id}") 编辑
                                include ../../includes/notification
        else
            .row
                each sch in schools
                    .col-lg-3.col-md-3.col-sm-6.col-xs-12
                        .tile-stats.b.brall.mb25.teal-bg
                            a(href="/admin/user/list?sid=#{sch._id}")
                                .tile-stats-icon
                                    .st-cube.color-white.s48
                                .tile-stats-content
                                    .tile-stats-number.color-white #{sch.name}
                                    .tile-stats-text.color-white #{sch.owner.name}
                                .clearfix
            include ../../includes/notification
block componentScript
    include ../../includes/table
block bottom
    script(src="/javascripts/app.js")
    script(src="/assets/js/pages/tables.js")
    script.
        setTimeout(function(){
            checkSideNav('一般用户管理');
        },0);
