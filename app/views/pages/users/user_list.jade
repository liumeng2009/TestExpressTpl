extends ../../layout

block content
    .content-wrapper
        .row
            .col-lg-12.heading
                ul#crumb.breadcrumb
                    li
                        i.im-home
                        a(href="/admin") 首页
                        i.en-arrow-right7
                    li
                        i.im-user4
                        a(href="/admin/user/list") 用户列表
        .outlet
            .row
                .col-lg-12
                    .panel.panel-default.plain.toggle.panelClose.panelRefresh
                        .panel-heading.white-bg
                            h4.panel-title 用户列表
                        .panel-body
                            .row.mb15
                                .col-lg-8.col-md-8
                                .col-lg-4.col-md-4
                                    a.btn.btn-default.pull-right(href="/admin/user")
                                        i.br-plus
                                        | 新增用户

                            table#presidentList.table.table-bordered
                                thead
                                    tr
                                        th.per20 用户名称
                                        th.per20 联系电话
                                        th.per20 设定为学校工作人员
                                        th.per20 所属用户组
                                        th.per20 操作
                                tbody
                                    each user in users
                                        tr(class="item-id-#{user._id}")
                                            td #{user.name}
                                            td #{user.phone}
                                            td
                                                if user.isWorker
                                                    label(style="color:green") 是
                                                else
                                                    | 否
                                            td
                                                if user.role
                                                    | #{user.role.name}
                                                else
                                                    | 未设定
                                            td
                                                a.btn.btn-primary(href="/admin/user/#{user._id}") 编辑
                            include ../../includes/notification
block componentScript
    include ../../includes/table
block bottom
    script(src="/javascripts/app.js")
    script(src="/assets/js/pages/tables.js")
    script.
        setTimeout(function(){
            checkSideNav('一般用户管理');
        },0);
