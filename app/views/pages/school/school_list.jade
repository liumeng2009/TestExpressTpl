extends ../../layout

block content
    .content-wrapper
        .row
            .col-lg-12.heading
                ul#crumb.breadcrumb
                    li
                        i.im-home
                        a(href="/admin") 首页
                        i.en-arrow-right7
                    li
                        i.im-user4
                        a(href="/admin/school/list") 学校列表
        .outlet
            .row
                .col-lg-12
                    .panel.panel-default.plain.toggle.panelClose.panelRefresh
                        .panel-heading.white-bg
                            h4.panel-title 学校列表
                        .panel-body
                            .row.mb15
                                .col-lg-12
                                    a.btn.btn-primary(href="/admin/school") 新增学校
                            table#presidentList.table.table-bordered
                                thead
                                    tr
                                        th.per20 用户名
                                        th.per20 所有者
                                        th.per15 建立时间
                                        th.per45 操作
                                tbody
                                    each school in schools
                                        tr(class="item-id-#{school._id}")
                                            td #{school.name}
                                            td 哈哈
                                            td #{moment(school.meta.createAt).format('MM/DD/YYYY')}
                                            td
                                                a.btn.btn-primary(href="/admin/president?id=#{school._id}") 编辑
                                                | &nbsp;&nbsp;
                                                a.del.btn.btn-danger(href="#",data-id="#{school._id}") 删除
                            include ../../includes/notification
block componentScript
    include ../../includes/table
block bottom
    script(src="/javascripts/app.js")
    script(src="/assets/js/pages/tables.js")
    script.
        setTimeout(function(){
            checkSideNav('学校管理');
        },0);
